<Window x:Class="Commands.ExtCommand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Commands"
        mc:Ignorable="d"
        Title="ExtCommand" Height="171" Width="491" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Double Click" HorizontalAlignment="Center"  VerticalAlignment="Center"  
                Width="167" Height="50" >
            <Button.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding AddCommand}"></MouseBinding>
            </Button.InputBindings>
        </Button>
    </Grid>
</Window>
