<Window x:Class="MVVM.View.OtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MVVM.ViewModel"
        xmlns:local="clr-namespace:MVVM.View"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="134.483" Width="460.345">
    <Window.DataContext>
        <vm:OtherWindowViewModel></vm:OtherWindowViewModel>
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="46,36,0,0" 
                 TextWrapping="Wrap"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" Width="120"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"
                   Text="{Binding CurrentTime, ConverterCulture=ru-RU, StringFormat=dd.MM.yyyy HH:mm:ss.ffff}"></TextBlock>
    </Grid>
</Window>
