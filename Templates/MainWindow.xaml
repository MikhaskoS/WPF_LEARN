<Window x:Class="Templates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Templates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="ButtonTemplate" TargetType="{x:Type Button}"  >
            <Border BorderBrush="Orange" BorderThickness="3" 
                    CornerRadius="2" Background="red" TextBlock.Foreground="AliceBlue">   
                <ContentPresenter RecognizesAccessKey="True"></ContentPresenter>  <!--Обязательный аттрибут-->
            </Border>
         
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Button Content="Пользовательская кнопка" Width="200" Height="50"  
                Template="{StaticResource ButtonTemplate}" Margin="37,50,555,319">
        </Button>

    </Grid>
</Window>
