<Window x:Class="WpfBehaviors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  mc:Ignorable="d"
        xmlns:local="clr-namespace:WpfBehaviors"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="MainWindow" Height="300" Width="300">
    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">

        </i:EventTrigger>
    </i:Interaction.Triggers>-->
    <i:Interaction.Behaviors>
        <local:WinBehaviors x:Name="WinMouseMoveBehaviour"></local:WinBehaviors>
    </i:Interaction.Behaviors>
    <Grid >
        <!--Привязка свойства к событию-->
        <TextBox HorizontalAlignment="Left" Margin="28,79,0,0" 
                 Text="{Binding PosX,  ElementName=WinMouseMoveBehaviour }" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
